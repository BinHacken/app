<!DOCTYPE html>
<html lang="de">

<head>
  <%- include('head'); %>
</head>

<body>
  <header>
    <%- include('header'); %>
  </header>

  <div class="container">
    <section id="login">
      <form action="auth" method="post">
        <input type="text" placeholder="Benutzername" name="username" maxlength="32" required>
        <input type="password" placeholder="Passwort" name="password" required>
        <% if (url) { %>
        <input type="hidden" name="url" value="<%= url %>">
        <% } %>
        <button type="submit" class="primary">Login</button>
      </form>
      <p>
        <% if (nope) { %>
        <%= nope %>
        <% } %>
      </p>
    </section>
  </div>
</body>

</html>