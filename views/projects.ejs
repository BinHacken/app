<!DOCTYPE html>
<html lang="de">

<head>
  <%- include('head'); %>
</head>

<body>
  <header>
    <%- include('header'); %>
  </header>

  <div class="container">
    <section id="res">
      <p>
        <% if(res) { %>
        <%= res %>
        <% } %>
      </p>
    </section>

    <section>
      <ul>
        <li>Projekte</li>
        <% projects.forEach(function(project){ %>
        <li>
          <span class="title">
            <%= project.name %>
          </span>
          <span class="userdata">
            <%- project.html %>
          </span>
          Maintainers:
          <span class="maintainers">
            <% project.maintainers.forEach(function(maintainer){ %>
            <a><%- maintainer.name %></a>
            <% }); %>
          </span>
          <br>
          <span>
            <a class="button primary" href="project?project=<%= project.id %>">Bearbeiten</a>
          </span>
        </li>
        <% }); %>
      </ul>
    </section>

    <section>
      <form methid="get" action="new-project">
        <input type="text" name="name" minlegth="1" maxlength="32" required>
        <button type="submit" class="primary">Neues Projekt</button>
      </form>
    </section>

  </div>
</body>

</html>